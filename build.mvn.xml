	<!-- 	使用eclipse jdt compiler编译 -->
	<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter" />

	<!-- maven -->
	<path id="maven-ant-tasks.classpath" path="E:/Program Files/apache-ant-1.8.2/lib/maven-ant-tasks-2.1.3.jar" />

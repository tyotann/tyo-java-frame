	<artifact:dependencies filesetId="deps.fileset.compile" useScope="compile" settingsFile="E:/Program Files/apache-maven-3.2.5/conf/settings.xml">
		<pom refid="maven.project" />
	</artifact:dependencies>

	<target name="build">

		<echo>JAVA虚拟机版本：${java.version}</echo>

		<tstamp>
			<format property="build.time" pattern="yyyyMMddhhmmss" />
		</tstamp>

		<echo>版本时间：${build.time}</echo>

		<delete dir="${jar.temp}" />
		<delete file="${deploy.home}/${jar.name}" />

		<mkdir dir="${jar.temp}" />

		<copy todir="${jar.temp}" failonerror="true">
			<fileset dir="${base.home}/src/">
				<include name="**/*.properties" />
				<include name="**/*.xml" />
			</fileset>
			<fileset dir="${base.home}/etc/">
				<exclude name="pay/*.*" />
				<include name="**/*.*" />
			</fileset>
		</copy>

		<!-- 加入版本信息 -->
		<copy todir="${jar.temp}/META-INF" failonerror="true">
			<fileset dir="${base.home}">
				<include name="version.txt" />
			</fileset>
		</copy>

		<!--includeAntRuntime="false" -->
		<javac destdir="${jar.temp}/" source="1.6" target="1.6" includeantruntime="false" fork="true" memoryMaximumSize="512m" debug="true" encoding="UTF-8" nowarn="true">
			<src path="${base.home}/src" />
			<classpath>
				<fileset dir="${lib.home}" />
				<fileset dir="${tomcat.home}" />
				<fileset refid="deps.fileset.compile" />
			</classpath>
		</javac>

		<jar destfile="${jar.desc}">
			<fileset dir="${jar.temp}">
				<include name="**/*.*" />
			</fileset>
			<manifest>
				<attribute name="IHIDEA-FRAME-CORE-Version" value="ihidea.frame.core.${build.time}" />
			</manifest>
		</jar>

